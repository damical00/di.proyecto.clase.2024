<Window x:Class="di.proyecto.clase._2024.Frontend.Dialogos.ArticuloAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:di.proyecto.clase._2024.Frontend.Dialogos"
        mc:Ignorable="d"
        Title="UsuarioAdd" Height="500" Width="800">
    <Grid Background="Gray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>


        <TextBlock Grid.ColumnSpan="2"
                   Grid.Row="0"
                   Text="NUEVO ARTICULO"
                   Foreground="White"
                   FontSize="20"
                   HorizontalAlignment="Center" />

        <TextBlock Grid.Row="1"
                   Grid.ColumnSpan="2"
                   Text="Los campos con asteríscos son campos obligatorios"
                   Foreground="White"
                   Margin="5,15,0,15" />

        <TextBox Grid.Row="2"
                 Grid.Column="0"
                 Foreground="White"
                 Margin="5,15,0,15"
                 x:Name="numSerie"
                 Width="200" 
                 MaxLength="45"
                 mat:HintAssist.Hint="Numero de serie *"/>

        <ComboBox Grid.Row="3"
                 Grid.Column="0"
                 mat:HintAssist.Hint="Estado *"
                 Foreground="White"
                 Margin="5,15,0,15"
                 x:Name="comboEstado"
                  Width="200"/>

        <TextBlock Text="Fecha de alta *"
                   Foreground="White"
                   Grid.Row="2"
                   Grid.Column="1"
                   HorizontalAlignment="Center" />
        <DatePicker Grid.Row="2"
                    Grid.Column="1"
                    Text="Fecha de alta"
                    Foreground="White"
                    Margin="5,15,0,15"
                    x:Name="fechaAlta"
                    Width="200" />

        <ComboBox Grid.Row="4"
                  Grid.Column="0"
                  Foreground="White"
                  Margin="5,15,0,15"
                  x:Name="usuarioAlta"
                  Width="200"
                  mat:HintAssist.Hint="Usuario de Alta" />

        <ComboBox Grid.Row="4"
                 Grid.Column="1"
                  mat:HintAssist.Hint="Modelo *"
                  Foreground="White"
                 Margin="5,15,0,15"
                 x:Name="modelo"
                  DisplayMemberPath="Modelo"
                  Width="200" />
        
        <ComboBox Grid.Row="5"
                 Grid.Column="1"
                 mat:HintAssist.Hint="Departamento *"
                 Foreground="White"
                 Margin="5,15,0,15"
                  DisplayMemberPath="Nombre"
                  x:Name="comboDepartamento"
                 Width="200" />
        
        <ComboBox Grid.Row="3"
                 Grid.Column="1"
                  mat:HintAssist.Hint="Espacio *"
                  Foreground="White"
                 Margin="5,15,0,15"
                 x:Name="espacio"
                  DisplayMemberPath="Nombre"
                  Width="200" />
        
        <ComboBox Grid.Row="5"
                 Grid.Column="0"
                 mat:HintAssist.Hint="Armario"
                 Foreground="White"
                 Margin="5,15,0,15"
                  DisplayMemberPath="ModeloNavigation.Modelo"
                  x:Name="comboArmario"
                 Width="200" />
        
        
        <TextBox Grid.Row="6"
                 Grid.ColumnSpan="2"
                 Text="Observaciones"
                 Foreground="White"
                 Margin="5,15,0,15"
                 Width="400"
                 x:Name="txtObservaiones" />
        
        

        <Grid Grid.Row="7"
              Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Width="100"
                    Height="50"
                    Background="Transparent"
                    BorderBrush="LightBlue"
                    Click="btnCancelar_Click">
                <TextBlock Text="Cancelar"
                           Foreground="LightBlue" />
            </Button>

            <Button Grid.Column="1"
                    Width="100"
                    Height="50"
                    Background="LightBlue"
                    Margin="10,0,0,0" Click="btnGuarar_Click">
                <TextBlock Text="Guardar"
                           Foreground="Black" />
            </Button>

        </Grid>
    </Grid>
</Window>
